<style>
body {
	background: url("http://www.highreshdwallpapers.com/wp-content/uploads/2011/09/Brilliant-Quality-High-Resolution-Wallpaper-1024x768.jpg");
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	height: 100%;
	width: 100%;
}
</style>
<div class="col-xs-6 col-xs-offset-3 panel panel-default welcome-container">
		<div class='row'>
			<div class='col-xs-10 col-offset-1'>
				<h1 class='shadow'>Greedly Welcomes You!</h1>
			</div>
		</div>
		<div class='container'>
			<h2>Sign Up</h2>
			<%= render "layouts/errors" %>

			<form action="<%= users_url %>" method="post">
				<input type='hidden'
				name='authenticity_token'
				value='<%= form_authenticity_token %>'>
				<div class='form-group'>
					<label>Email</label>
				</div>
				<div class='form-group'>
					<input type="text" name="user[email]" value="">
				</div>
		
				<div class='form-group'>
					<label for='sess-password'>Password</label>
				</div>
				<div class='form-group'>
					<input id='sess-password' type="password" name="user[password]" value="" >
				</div>

				<input class='btn btn-primary' type="submit" value="Sign Up">
				<a class='btn btn-primary' href='/session/new'>Already been here? Sign In!</a>
			</form>
		</div>	
</div>
